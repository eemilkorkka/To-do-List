<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="../home.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lexend+Deca:wght@800&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lexend+Deca:wght@800&family=Montserrat:wght@400;500&display=swap" rel="stylesheet">
    <title>Home</title>
</head>
<body>
    <nav>
        <h1 style="color: white; font-size: 28px; margin-left: 30px; font-family: 'Lexend Deca', sans-serif;">TodoList</h1>
        <a href="/logout"><button class="logout-btn" style="font-family: 'Montserrat', sans-serif;">Log out</button></a>
    </nav>
    <div class="todo-container">
        <form class="input-form" action="/home" method="post">
            <input type="text" placeholder="Title" class="todo-title" name="todoTitle" id="todoTitle" required>
            <input type="text" placeholder="Description" class="todo-description" id="todoDesc" name="todoDescription" required>
            <button class="todo-btn">Add</button>
        </form>
        <ul>
            <% newItems.forEach(todo => { %>
                <% const todoID = todo.TodoID %>
                <li>
                    <h3><%= todo.TodoTitle %></h3>
                    <p><%= todo.TodoDescription %></p>
                    <input type="checkbox" id="checkbox">
                    <button class="edit-btn" data-id="<%= todoID %>" id="editBtn">Edit</button>
                    <button class="delete-btn" data-id="<%= todoID %>" id="deleteBtn">Delete</button>
                </li>
            <% }); %>        
        </ul>
    </div>
    <script>
        document.addEventListener("click", (event) => {
        if (event.target.classList.contains("delete-btn")) {
        const deleteButton = event.target;
        const todoID = deleteButton.getAttribute("data-id");
        
        fetch(`/home/${todoID}`, {
            method: "DELETE",
        }).then(response => {
            if (response.ok) {
                console.log("Todo was deleted successfully.");
                deleteButton.parentElement.remove();
            } else {
                console.log("An error occurred whilst trying to delete todo.");
            }
        }).catch(error => {
            console.log("Error:", error);
        });
    }
});
    </script>
</body>
</html>